      </Button>
   </center>
   <bottom>
      <Button fx:id="infoBt" mnemonicParsing="false" onAction="#onInfoButtonClicked" text="Info" BorderPane.alignment="CENTER_LEFT">
         <graphic>
            <ImageView fitHeight="36.0" fitWidth="54.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@info.png" />
               </image>
            </ImageView>
         </graphic>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
